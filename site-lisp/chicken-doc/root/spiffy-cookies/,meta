(type egg)
(signature "spiffy-cookies egg")
(timestamp 1282061752.0)
(sxml ((tags "egg") (section 2 "Spiffy-cookies" (p "This egg provides procedures for cookie-management.")) (section 2 "Author" (p (link "http://wiki.call-cc.org/users/mario-domenech-goulart" "Mario Domenech Goulart")) (p "Many thanks to Christian Kellermann, Moritz Heidkamp and Peter Bex for the helpful discussions and suggestions.")) (section 2 "Requirements" (p (int-link "spiffy"))) (section 2 "Procedures" (def (sig (procedure "(read-cookie name)" (id read-cookie))) (p "Return the value for cookie " (tt "name") " or " (tt "#f") " if it is not set.")) (def (sig (procedure "(set-cookie! name value #!key comment max-age domain path secure)" (id set-cookie!))) (p "Set cookie named " (tt "name") " with value " (tt "value") ".  The keyword parameters can be used to set optional cookie's attributes.")) (def (sig (procedure "(delete-cookie! name #!key domain path)" (id delete-cookie!))) (p "Delete cookie " (tt "name") " by setting its " (tt "max-age") " to 0."))) (section 2 "License" (p "BSD")) (section 2 "Version History" (dl (dt "1.0") (dd "initial release")))))
