(sxml ((section 2 "awful-ssl" (section 3 "Description" (p (b "Warning") ": this extension currently depends on a development version of awful (trunk).") (p "SSL support for " (link "http://wiki.call-cc.org/eggref/4/awful" "awful") ".") (p "This extension provides a single procedure (" (tt "enable-ssl") ") which enables SSL support for awful.")) (section 3 "Author" (p (link "http://wiki.call-cc.org/users/mario-domenech-goulart" "Mario Domenech Goulart"))) (section 3 "Requirements" (ul (li (link "http://wiki.call-cc.org/eggref/4/awful" "awful") " (>= 0.28)") (li (link "http://wiki.call-cc.org/eggref/4/openssl" "openssl")))) (section 3 "Procedure" (def (sig (procedure "(enable-ssl #!key certificate-file private-key-file)" (id enable-ssl))) (p "Enable SSL support for " (link "http://wiki.call-cc.org/eggref/4/awful" "awful") ".  The following keyword parameters can be used:") (dl (dt (tt "certificate-file") " (string)") (dd "Path to the certificate file (PEM format).") (dt (tt "private-key-file") " (string)") (dd "Path to the private key file (PEM format).")))) (section 3 "Usage example" (highlight scheme "(use awful-ssl spiffy)\n\n(server-port 443)\n\n(enable-ssl\n certificate-file: \"server.crt\"\n private-key-file: \"server.key\")")) (section 3 "License" (p "BSD")) (section 3 "Version history" (p "Not really released yet.")))))
