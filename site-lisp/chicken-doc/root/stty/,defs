(index ("stty" 0) ("with-stty" 962) ("get-terminal-attributes" 1302) ("set-terminal-attributes!" 1302) ("make-term-attrs" 1491) ("free-term-attrs" 1491) ("term-attrs-iflag" 1491) ("term-attrs-oflag" 1491) ("term-attrs-cflag" 1491) ("term-attrs-lflag" 1491) ("term-attrs-cc" 1491) ("term-attrs-iflag-set!" 1491) ("term-attrs-oflag-set!" 1491) ("term-attrs-cflag-set!" 1491) ("term-attrs-lflag-set!" 1491) ("term-attrs-cc-set!" 1491))
(def (sig (procedure "(stty [port] settings ...)" (id stty))) (p "Sets the terminal attributes for PORT (defaulting to current-input-port) according to the SETTINGS, which should be a list of symbols corresponding to modes in the stty(1) man page, or one or more symbols wrapped in a (not ...) list.") (p "To enable a character setting, use a list of the setting name followed by the character (or #f to disable), as in") (highlight scheme "     (stty '(erase #\\delete))") (p "The following settings are supported:") (pre "    clocal cread crtscts cs5 cs6 cs7 cs8 cstopb hup hupcl parenb\n    parodd brkint icrnl ignbrk igncr ignpar imaxbel inpck istrip\n    ixany ixoff ixon parmrk tandem ocrnl onlcr onlret onocr opost\n    tab0 tab1 tab2 tab3 tabs crterase crtkill ctlecho echo echoctl\n    echoe echoke echonl echoprt icanon iexten isig noflsh prterase\n    tostop xcase eof eol eol2 erase intr kill lnext quit rprnt\n    start stop susp werase raw sane"))
(def (sig (procedure "(with-stty '(setting ...) thunk)" (id with-stty))) (p "Sets the terminal attributes with STTY, evaluates THUNK, then restores the original attributes and returns the value from THUNK.") (p "Example:") (highlight scheme "  (define (read-password prompt)\n    (display prompt)\n    (with-stty '(not echo) read-line))"))
(def (sig (procedure "(get-terminal-attributes [port-or-fd])" (id get-terminal-attributes)) (procedure "(set-terminal-attributes! port-or-fd action attrs)" (id set-terminal-attributes!))))
(def (sig (procedure "(make-term-attrs)" (id make-term-attrs)) (procedure "(free-term-attrs attrs)" (id free-term-attrs)) (procedure "(term-attrs-iflag attrs)" (id term-attrs-iflag)) (procedure "(term-attrs-oflag attrs)" (id term-attrs-oflag)) (procedure "(term-attrs-cflag attrs)" (id term-attrs-cflag)) (procedure "(term-attrs-lflag attrs)" (id term-attrs-lflag)) (procedure "(term-attrs-cc attrs i)" (id term-attrs-cc)) (procedure "(term-attrs-iflag-set! attrs int)" (id term-attrs-iflag-set!)) (procedure "(term-attrs-oflag-set! attrs int)" (id term-attrs-oflag-set!)) (procedure "(term-attrs-cflag-set! attrs int)" (id term-attrs-cflag-set!)) (procedure "(term-attrs-lflag-set! attrs int)" (id term-attrs-lflag-set!)) (procedure "(term-attrs-cc-set! attrs i char)" (id term-attrs-cc-set!))))
